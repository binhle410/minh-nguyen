                                        span.months
                                            span.number-of-months    4
                                            span.lbl    months)
                            .edit-field
                                .row
                                    .col-sm-6
                                        .form-group
                                            label From month
                                            input.form-control.datepicker(name='fromDate', value='09/2011')
                                    .col-sm-6
                                        .form-group
                                            label To month
                                            input.form-control.datepicker(name='toDate', value='01/2015')
                        .achievement-blk
                            .view-field
                                .view-control.placeholder Education Achievements
                            .edit-field
                                .form-group
                                    label Achievements
                                    textarea.form-control(rows='3', name='description', maxlength='5000', aria-hidden='true')
                                    em.countdown.gray-light 5000 character remaining
                        .form-group.edit-field.edit-btns.clearfix
                            .pull-left
                                | (
                                strong.text-red *
                                | ) is required field
                            .pull-right
                                button.btn-remove-this-section.btn(type='button', data-toggle='modal', data-target='#dialog-remove-item')
                                    i.fa.fa-trash-o
                                button.btn-cancel.btn.btn-default(type='button') Cancel
                                button.btn.btn-primary(type='button') Save
