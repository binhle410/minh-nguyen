.section-detail.section-education
    .box
        fieldset
            legend.box-md
                i.fa.fa-fw.fa-graduation-cap
                |  Education History
            .placeholder-section.box-md(hidden='')
                p.placeholder
                    | Input details of your education, as well as any professional qualifications or relevant training
            .sortable.content-section
                // Sample
                form.form-wrapper.box-md.relative.sample(hidden='')
                    span.form-btn-edit
                        button.btn.btn-sm(type='button')
                            i.fa.fa-pencil
                    .feature-blk
                        .view-field
                            h4.view-control.placeholder e.g. International Business
                        .edit-field
                            .form-group
                                label
                                    strong.text-red *
                                    | Subject
                                input.form-control(type='text', name='subject', value='', maxlength='150', autofocus='')
                    .feature-blk
                        .view-field
                            p.view-control.placeholder e.g. University of Economics
                            br
                            span.view-control Please select...
                        .edit-field
                            .row
                                .col-sm-6
                                    .form-group
                                        label
                                            strong.text-red *
                                            |School
                                        input.form-control(type='text', name='school', value='', maxlength='150')
                                .col-sm-6
                                    .form-group
                                        label
                                            strong.text-red *
                                            |                                                 Qualification
                                        .border-text-box
                                            select.form-control(name='qualification')
                                                option(value='0') Please select...
                                                option(value='2' ) High school
                                                option(value='3' ) Associate’s degree
                                                option(value='12' ) College
                                                option(value='4' ) Bachelors
                                                option(value='5' ) Masters
                                                option(value='6' ) Doctorate
                                                option(value='11') Others
                        .feature-blk
                            .view-field
                                p
                                    span.view-control.placeholder e.g. 09/2008
                                    |                                         -
                                    span.view-control.placeholder e.g. 12/2014
                                    span.total-time.placeholder
                                        | (
                                        span.years
                                            span.number-of-years 6
                                            span.lbl    years
                                        span.months
                                            span.number-of-months   3
                                            span.lbl    months
                                        | )
                            .edit-field
                                .row
                                    .col-sm-6
                                        .form-group
                                            label From month
                                            input.form-control.datepicker(name='fromDate')
                                    .col-sm-6
                                        .form-group
                                            label To month
                                            input.form-control.datepicker(name='toDate')
                        .feature-blk
                            .view-field
                                .view-control.placeholder Education Achievements
                            .edit-field
                                .form-group
                                    label Achievements
                                    textarea.form-control(rows='3', name='description', maxlength='5000')
                        .form-group.edit-field.edit-btns.clearfix
                                .pull-left
                                    | (
                                    strong.text-red *
                                    | ) is required field
                                .pull-right.text-right
                                    button.btn.btn-default.btn-cancel(type='button') Cancel
                                    button.btn.btn-primary(type='button') Save
                // Form
                form.form-wrapper.box-md.relative
                    span.form-btn-edit
                        button.btn.btn-sm(type='button')
                            i.fa.fa-pencil
                    .subject-blk
                        .view-field
                            h4.view-control International Economics
                        .edit-field.clearfix
                            .form-group
                                label
                                    strong.text-red *
                                    | Subject
                                input.form-control(type='text', name='subject', value='International Economics', maxlength='150', autofocus='')
                    .school-blk
                        .view-field
                            span.view-control Foreign Trade University
                            p.view-control Bachelors
                        .edit-field
                            .row
                                .col-sm-6
                                    .form-group
                                        label
                                            strong.text-red *
                                            | School
                                        input.form-control(type='text', name='school', value='Foreign Trade University', maxlength='150')
                                .col-sm-6
                                    .form-group
                                        label
                                            strong.text-red *
                                            | Qualification
                                        .border-text-box
                                            select.form-control(name='qualification' tabindex='-1', title='')
                                                option(value='0') Please select...
                                                option(value='2' ) High school
                                                option(value='3' ) Associate’s degree
                                                option(value='12' ) College
                                                option(value='4', selected='selected') Bachelors
                                                option(value='5' ) Masters
                                                option(value='6' ) Doctorate
                                                option(value='11' ) Others
                        .time-blk
                            .view-field
                                p
                                    span.view-control 09/2011
                                    |                                         -
                                    span.view-control 01/2015
                                    span.total-time
