                            .col-sm-6.text-right
                                button.btn-remove-this-section.btn.btn-link(type='button')
                                    i.glyphicon.glyphicon-trash
                                button.btn-cancel.btn.btn-default(type='button') Cancel
                                button.btn-save.btn.btn-primary(type='button') Save
            button.btn.btn-default.btn-block.no-border.add-one-more-section(type='button')
                strong Add Employment History
