                                label
                                    strong.text-red *
                                    |  Company
                                input.form-control.edit-control.company-name(type='text', name='companyName', placeholder='e.g. interviewspot', value='', maxlength='150')
                    .feature-blk
                        .view-field(style='display: block;')
                            p
                                span.view-control.placeholder(data-control='from-date') e.g. 09/2008
                                |                                     -
                                span.view-control.placeholder(data-control='to-date', data-type='manual') e.g. 12/2014
                                span.total-time.placeholder
                                    |  (
                                    span.years
                                        span.number-of-years 6
                                        span.lbl  years
                                    span.months
                                        span.number-of-months  3
                                        span.lbl  months
                                    | )
                        .edit-field(style='display: none;')
                            .row
                                .col-sm-4
                                    .form-group
                                        label From month
                                        input.form-control.edit-control.datepicker(name='fromDate', placeholder='e.g. 09/2008', data-control='from-date')
                                .col-sm-4
                                    .form-group
                                        label To month
                                        input.form-control.edit-control.datepicker(name='toDate', placeholder='e.g. 12/2014', data-control='to-date')
                                .col-sm-4
                                    .form-group
                                        .m-t-lg.hidden-xs
                                        label.control-label
                                            input.to-present-checkbox.edit-control(type='checkbox', name='currentExp', value='1', data-text-value='to present')
                                            em Current Job
                    .feature-blk
                        .view-field(style='display: block;')
                            .view-control.placeholder Describe your duties and responsibilities...
                        .edit-field(style='display: none;')
                            .form-group
                                label Description
                                #mceu_6.mce-tinymce.mce-container.mce-panel(hidefocus='1', tabindex='-1', role='application', style='visibility: hidden; border-width: 1px;')
