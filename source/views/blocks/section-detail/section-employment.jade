                                label
                                    strong.text-red *
                                    |  Position
                                input.form-control.edit-control(type='text', name='position', placeholder='e.g. UI/UX Designer', value='', maxlength='150', autofocus='')
                    .feature-blk
                        .view-field(style='display: block;')
                            p.view-control Staff.com
                        .edit-field(style='display: none;')
